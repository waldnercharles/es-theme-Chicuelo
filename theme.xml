			</image>

      <image name="gradient" extra="true">
        <path>./_assets/gradient.png</path>
        <tile>true</tile>
        <pos>0.06 0.05</pos>
        <size>0.38 0.9</size>
        <zIndex>70</zIndex>

      </image>

			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<color>00000000</color>
				<origin>0 0</origin>
				<pos>0.05 0.05</pos>
				<size>0.4 0.9</size>
				<logoScale>0.7</logoScale>
				<logoSize>0.35 0.2</logoSize>
        <logoRotation>7</logoRotation>
        <logoRotationOrigin>-5 0.5</logoRotationOrigin>
				<maxLogoCount>2</maxLogoCount>
				<zIndex>60</zIndex>
			</carousel>

			<text name="systemInfo">
				<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
				<alignment>center</alignment>
				<backgroundColor>00000000</backgroundColor>
				<color>000000</color>
				<origin>0.5 0.5</origin>
				<pos>0.25 0.59</pos>
				<size>0.980 0.050</size>
				<fontSize>0.025</fontSize>
				<zIndex>60</zIndex>
			</text>

			<!-- <text name="longdescription" extra="true">
