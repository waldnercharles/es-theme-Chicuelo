<theme>
	<formatVersion>4</formatVersion>

	<!-- System View -->
	<feature supported="carousel">
		<view name="system">

			<image name="bg" extra="true">
				<path>./_assets/bg.png</path>
				<pos>0 0</pos>
				<size>1 1</size>
				<zIndex>50</zIndex>
			</image>

			<image name="bg-pic" extra="true">
				<path>./_assets/characters/${system.theme}.png</path>
				<tile>false</tile>
				<pos>0.45 0.1131</pos>
				<size>0.4774 0.7738</size>
				<zIndex>20</zIndex>
			</image>

			<image name="bg-pic-brighten" extra="true">
				<path>./_assets/white.png</path>
				<tile>false</tile>
				<color>e6d9ff22</color>
				<pos>0.45 0.09</pos>
				<size>0.50 0.82</size>
				<zIndex>25</zIndex>
			</image>

			<image name="bg-pic-scanlines" extra="true">
				<path>./_assets/scanlines-h.png</path>
				<tile>true</tile>
				<color>ffffff80</color>
				<pos>0.45 0.09</pos>
				<size>0.50 0.82</size>
				<zIndex>30</zIndex>
			</image>

			<image name="character" extra="true">
				<path>./_assets/characters/${system.theme}-character.png</path>
				<tile>false</tile>
				<origin>0 0</origin>
				<pos>0 0</pos>
				<size>1 1</size>
				<zIndex>100</zIndex>
			</image>

			<!-- <text name="shortdescription" extra="true">
