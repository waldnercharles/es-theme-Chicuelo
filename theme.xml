				<zIndex>60</zIndex>
			</text> -->

			<helpsystem name="help">
				<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
				<fontSize>0.019</fontSize>
				<pos>0.05 0.97</pos>
				<textColor>23232f</textColor>
				<iconColor>23232f</iconColor>
			</helpsystem>

		</view>
	</feature>

	<view name="basic, detailed, video, grid">

		<image name="bg" extra="true">
			<path>./_assets/bg.png</path>
			<tile>false</tile>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>50</zIndex>
		</image>

		<image name="bg-pic-brighten" extra="true">
			<path>./_assets/white.png</path>
			<tile>false</tile>
			<color>e6d9ff22</color>
			<pos>0.45 0.09</pos>
			<size>0.50 0.82</size>
			<zIndex>25</zIndex>
		</image>

		<image name="bg-pic-scanlines" extra="true">
			<path>./_assets/scanlines-h.png</path>
			<tile>true</tile>
			<color>ffffff80</color>
			<pos>0.45 0.09</pos>
			<size>0.50 0.82</size>
			<zIndex>30</zIndex>
		</image>

		<image name="logo" extra="true">
			<path>./_assets/logos/${system.theme}.svg</path>
			<color>e0e0e0</color>
			<origin>0.5 0.5</origin>
			<pos>0.25 0.5</pos>
            <tile>false</tile>
            <maxSize>0.245 0.14</maxSize>
			<zIndex>80</zIndex>
		</image>

        <image name="logo2" extra="true">
			<path>./_assets/logos/${system.theme}.svg</path>
			<color>eeeeee</color>
			<origin>0.5 0.5</origin>
			<pos>0.24875 0.5025</pos>
            <tile>false</tile>
            <maxSize>0.245 0.14</maxSize>
			<zIndex>75</zIndex>
		</image>

		<text name="shortdescription, longdescription" extra="true">
			<pos>1 1</pos>
		</text>

		<textlist name="gamelist">
			<selectorColor>ff0000</selectorColor>
			<selectorImagePath>./_assets/icon.png</selectorImagePath>
			<selectedColor>ff0000</selectedColor>
			<!-- <selectedColor>78c7ef</selectedColor> -->
			<selectorHeight>.05</selectorHeight>
			<primaryColor>818181</primaryColor>
			<secondaryColor>00ff00</secondaryColor>
			<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
			<pos>0.05 0.10</pos>
			<size>0.4 0.8</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.70</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<zIndex>100</zIndex>
		</textlist>

		<helpsystem name="help">
			<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<pos>0.48 0.96</pos>
			<textColor>23232f</textColor>
			<iconColor>23232f</iconColor>
		</helpsystem>

		<!-- Hide Unused Elements -->
		<image name="md_image, md_marquee">
			<origin>0 0</origin>
			<pos>1 1</pos>
		</image>

		<text name="md_description, md_lbl_players, md_players, md_lbl_developer, md_developer, md_lbl_publisher, md_publsher, md_lbl_genre, md_genre, md_lbl_playcount, md_playcount, md_lbl_lastplayed, md_lbl_releasedate, md_lbl_rating">
			<origin>0 0</origin>
			<pos>1 1</pos>
		</text>

		<datetime name="md_lastplayed, md_releasedate">
			<origin>0 0</origin>
			<pos>1 1</pos>
		</datetime>

		<rating name="md_rating">
			<origin>0 0</origin>
			<pos>1 1</pos>
		</rating>

	</view>

